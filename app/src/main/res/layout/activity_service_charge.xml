<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceChargeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chargeText"
        android:text="Service Charge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serviceCharge">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:inputType="text"
            android:gravity="right"

            android:text="0.0 %"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chargeSelectText"
        android:text="Please Select the charge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp">

    </Spinner>




    <android.support.constraint.Guideline
        android:id="@+id/guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This Charge is Selected"
        android:layout_marginTop="100dp"
        android:id="@+id/chargeSelect"
        android:layout_marginLeft="10dp" />






    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardlost"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:text="Save"
        android:id="@+id/save"
        android:textSize="14dp"
        android:background="@drawable/roundedbutton"/>




</LinearLayout>