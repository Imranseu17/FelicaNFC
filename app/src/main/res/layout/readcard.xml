            android:layout_height="wrap_content"
            android:layout_below="@+id/nfcImage"
            android:text="Please tab the User Card"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:id="@+id/nfcText"/>

    <TextView
