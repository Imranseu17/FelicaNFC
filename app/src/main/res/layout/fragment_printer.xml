<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrinterFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/operator"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:inputType="text"
                android:hint="@string/operatorname"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customer"
            android:layout_below="@id/operator" >

            <EditText
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:hint="@string/customersupport"
                />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Printer Name: "
            android:textSize="14dp"
            android:id="@+id/printer"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Device ID: "
            android:textSize="14dp"
            android:id="@+id/device"/>



        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/device"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:text="Find Device"
            android:id="@+id/find"
            android:textSize="14dp"
            android:background="@drawable/roundedbutton"/>


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/find"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="230dp"
            android:text="Save"
            android:id="@+id/save"
            android:textSize="14dp"
            android:background="@drawable/roundedbutton"/>

    </RelativeLayout>

</FrameLayout>